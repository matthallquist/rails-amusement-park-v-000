<h1><%= @attraction.name %></h1>

<ul>
  <li>Tickets: <%= @attraction.tickets %></li>
  <li>Happiness: <%= @attraction.happiness_rating %></li>
  <li>Nausea: <%= @attraction.nausea_rating %></li>
  <li>Min. Height: <%= @attraction.min_height %></li>
</ul>

<% if !@user.admin %>
  <form action="/rides/create" method="post">
    <%= tag(:input, :type => "hidden", :name => request_forgery_protection_token.to_s, :value => form_authenticity_token) %>
    <input type="hidden" name="user_id" value="<%= @user.id %>">
    <input type="hidden" name="attraction_id" value="<%= @attraction.id %>">
    <input type="submit" value="Go on this ride">
  </form>
<% else %>
  <%= link_to "Edit Attraction", edit_attraction_path(@attraction) %>
<% end %>
